<style>
	body {
		font-family: Arial, sans-serif;
		margin: 0;
		padding: 0;
	}
	
	nav {
		font-family: Arial, sans-serif;
		background-color: #2C3E50;
		color: #fff;
		padding: 10px 20px;
		height:100%;
		position: fixed;
		left: 0;
		top: 0;
	}

	nav ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	nav li {
		display: block;
		margin-bottom: 10px;
	}

nav a {
  position: relative;
}

nav a:before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background-color: transparent;
  border-radius: 50%;
  opacity: 0;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
}

nav a:hover:before {
  width: 120%;
  height: 120%;
  opacity: 1;
}

	
	h2 {
		font-size: 2em;
		text-align: center;
	}
</style>